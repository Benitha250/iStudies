<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_lesson"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_direction"
            android:background="@color/green"
            />

        <TextView
            android:id="@+id/name_lesson_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/atma_semibold"
            android:text="Lesson Name"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_subject">
            <TextView
                android:id="@+id/note_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/atma_semibold"
                android:text="Lesson Notes"
                android:textColor="@color/black"
                android:background="#40739e"
                android:padding="10dp"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/video_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/atma_semibold"
                android:text="Lesson Video"
                android:textColor="@color/black"
                android:background="#40739e"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>